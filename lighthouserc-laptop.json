{
  "ci": {
    "preset": "lighthouse:recommended",
    "collect": {
      "staticDistDir": "./dist",
      "url": [],
      "numberOfRuns": 1
    },
    "assert": {
      "assertions": {
        "unsized-images": "off",
        "uses-responsive-images": "off",
        "image-alt": "off",
        "image-aspect-ratio": "off",
        "image-size-responsive": "off",
        "csp-xss": "off",
        "errors-in-console": "off",
        "uses-long-cache-ttl": "off",
        "categories:performance": ["warn", { "minScore": 0.5 }],
        "categories:accessibility": ["warn", { "minScore": 0.3 }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./lhci-report-laptop"
    },
    "collectMatrix": [
      {
        "name": "desktop",
        "settings": {
          "formFactor": "desktop",
          "screenEmulation": {
            "width": 1350,
            "height": 940,
            "deviceScaleFactor": 1,
            "mobile": false,
            "disabled": false
          },
          "emulatedUserAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/113.0.0.0 Safari/537.36"
        }
      }
    ]
  }
}
